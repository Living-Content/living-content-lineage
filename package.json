{
  "name": "living-content-tracer",
  "version": "1.0.0",
  "description": "Interactive trace visualization with C2PA-aligned metadata",
  "type": "module",
  "scripts": {
    "theme:generate": "tsx scripts/generate-theme.ts",
    "catalog:generate": "tsx scripts/generate-catalog.ts",
    "generate": "npm run theme:generate && npm run catalog:generate",
    "dev": "npm run generate && vite",
    "build": "npm run generate && tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-svelte": "^3.0.0",
    "globals": "^15.15.0",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.46.4",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.28.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "dompurify": "^3.3.1",
    "gsap": "^3.14.2",
    "highlight.js": "^11.11.1",
    "json5": "^2.2.3",
    "marked": "^17.0.1",
    "pixi.js": "^8.15.0"
  }
}
